extends ../layouts/common
block content
	h1 Users
		a.ml-2.btn.btn-light(href="/users/create") New
	form(action = '/users/search' method = 'GET', class = 'd-flex')
		input.ml-auto(type = 'text' name = 'q')
		button(class = 'btn btn-sm btn-success ml-1') search
	table.table
		tr
			th Avatar
			th Name
			th Phone
			th Actions
		each user in users
			tr
				td
					img(src= user.avatar, width= "30px")
				td= user.name
				td= user.phone
				td
					a(href="/users/"+ user.id) View
		