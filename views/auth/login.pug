extends ../layouts/common
block content
	h1 Login
	if errors
		each error in errors
			.alert.alert-danger= error

	form(action = "/auth/login" method = "POST") 
		input(type="hidden", name="_csrf", value=csrfToken)
		label(for="email") Email 
		input#email.ml-1.form-control(name = "email", type = "email", value = values ? values.email : '')

		label(for="password") Password
		input#password.ml-1.form-control(name = "password", type = "password", value = values ? values.password : '')
		button.mt-2.btn.btn-primary.ml-1 Login